@namespace Eternet.Web.UI

<FluentAnchor Id="@ComponentId" Href="@Href" Target="@Target" IconStart="@IconStart" Appearance="@Appearance" OnClick="OnClick">
    @ChildContent
</FluentAnchor>
<FluentTooltip Anchor="@ComponentId" Position=TooltipPosition.Top Delay=Delay>@TooltipText</FluentTooltip>

@code {
    [Parameter] 
    public string ComponentId { get; set; } = Guid.NewGuid().ToString();

    [Parameter][EditorRequired] 
    public required string Href { get; set; }

    [Parameter] 
    public string Target { get; set; } = "_blank";

    [Parameter] 
    public int? Delay { get; set; } = 200;

    [Parameter] 
    public bool Disabled { get; set; }

    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter] 
    public Icon? IconStart { get; set; }

    [Parameter]
    [EditorRequired] 
    public required string TooltipText { get; set; }

    [Parameter] 
    public Appearance? Appearance { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

}
